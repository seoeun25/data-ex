        "type" : "local",
        "baseDir" : "/tmp",
        "filter" : "sample_sales.csv",
        "extractPartition" : false
      }
    },
    "tuningConfig" : {
      "type" : "index",
      "targetPartitionSize" : 5000000,
      "indexSpec" : {
        "bitmap" : {
          "type" : "roaring"
        },
        "dimensionSketches" : {
          "type" : "none"
        },
        "allowNullForNumbers" : false
      },
      "buildV9Directly" : true,
      "ignoreInvalidRows" : true,
      "maxRowsInMemory" : 75000,
      "maxOccupationInMemory" : -1
    }
  }
}